<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">


    <Button
        android:id="@+id/starterBtn"
        android:layout_width="413dp"
        android:layout_height="62dp"
        android:backgroundTint="#77435FB1"
        android:text="Entrees"
        android:textAllCaps="false"
        android:textColor="#7A2104"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/mainDishBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Title"
        app:layout_constraintVertical_bias="0.224" />

    <ImageView
        android:id="@+id/Title"
        android:layout_width="480dp"
        android:layout_height="136dp"
        android:src="@drawable/realfood"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="-35dp" />

    <ImageView
        android:id="@+id/wallpaper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alpha=".25"
        android:src="@drawable/wallpaperfood"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/mainDishBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="Plats principaux"
        app:layout_constraintBottom_toTopOf="@+id/desertBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/desertBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="212dp"
        android:text="Desserts"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/wallpaper"
        app:layout_constraintStart_toStartOf="@+id/wallpaper" />

</androidx.constraintlayout.widget.ConstraintLayout>

